<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="@drawable/menu_coffee"
    android:fillViewport="true"
    tools:context="com.intrinsic.cid.intrinsic.MenuCoffeeActivity">

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize" >

        <Button
            android:id="@+id/yatte_coffee_button"
            android:background="@color/colorBasic"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Yatte"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/cappuccino_coffee_button"
            android:background="@color/colorBasic"
            android:text="Cappuccino"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/yatte_coffee_button"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/caramel_macchiato_coffee_button"
            android:background="@color/colorBasic"
            android:text="Caramel Macchiato"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/cappuccino_coffee_button"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/mocha_coffee_button"
            android:background="@color/colorBasic"
            android:text="Mocha"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/caramel_macchiato_coffee_button"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/white_mocha_coffee_button"
            android:background="@color/colorBasic"
            android:text="White Mocha"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/mocha_coffee_button"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/black_and_white_mocha_coffee_button"
            android:background="@color/colorBasic"
            android:text="Black + White Mocha"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/white_mocha_coffee_button"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true" />
    </android.widget.RelativeLayout>
</ScrollView>