<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="@drawable/landing_fresh"
    android:fillViewport="true"
    tools:context="com.intrinsic.cid.intrinsic.RewardsActivity">

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/starsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/starsPortion"
            android:layout_toLeftOf="@+id/starsDivide"
            android:layout_toStartOf="@+id/starsDivide"
            android:layout_marginTop="70dp"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/starsDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/starsPortion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/starsDivide"
            android:layout_toEndOf="@+id/starsDivide"
            android:layout_marginTop="85dp"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/starImage"
            android:contentDescription="A star image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/starsPortion"
            android:layout_toEndOf="@+id/starsPortion"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/yellow"/>

        <TextView
            android:id="@+id/rewardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rewardView"
            android:layout_centerHorizontal="true"
            android:color="@color/black"
            android:max="10"/>

        <ImageView
            android:id="@+id/starProg1"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:layout_toLeftOf="@+id/starProg2"
            android:layout_toStartOf="@+id/starProg2"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg2"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:layout_toLeftOf="@+id/starProg3"
            android:layout_toStartOf="@+id/starProg3"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg3"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg4"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:layout_toRightOf="@+id/starProg3"
            android:layout_toEndOf="@+id/starProg3"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg5"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:layout_toRightOf="@+id/starProg4"
            android:layout_toEndOf="@+id/starProg4"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg6"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/starProg1"
            android:layout_toLeftOf="@+id/starProg7"
            android:layout_toStartOf="@+id/starProg7"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg7"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/starProg2"
            android:layout_toLeftOf="@+id/starProg8"
            android:layout_toStartOf="@+id/starProg8"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg8"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/starProg3"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg9"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/starProg4"
            android:layout_toRightOf="@+id/starProg8"
            android:layout_toEndOf="@+id/starProg8"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <ImageView
            android:id="@+id/starProg10"
            android:contentDescription="A star image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/starProg5"
            android:layout_toRightOf="@+id/starProg9"
            android:layout_toEndOf="@+id/starProg9"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorBasicFull"/>
        <Button
            android:id="@+id/redeemReward"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@+id/starProg8"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:text="Redeem Reward"
            android:textColor="@color/white" />
    </android.widget.RelativeLayout>
</ScrollView>
