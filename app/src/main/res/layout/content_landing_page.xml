<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="@drawable/homepage"
    android:fillViewport="true"
    tools:context="com.intrinsic.cid.intrinsic.LandingPage">
    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_name_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/howManyStarsEarned"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/howManyStarsEarned"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/howManyStarsLeft"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="@string/_4_10"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/howManyStarsLeft"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/rewardsBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:text="@string/howManyStarsLeft"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:text="6 stars until next reward!" />

        <ProgressBar
            android:id="@+id/rewardsBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_above="@+id/music_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="83dp"
            android:progress="40"
            android:progressDrawable="@drawable/rounded_progress_bar" />

        <Button
            android:id="@+id/menu_button"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/rounded_button"
            android:text="@string/menu"
            android:textColor="@color/black"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/order_button"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/rounded_button"
            android:text="@string/order"
            android:textColor="@color/black"
            android:onClick="orderOTGPage"/>

        <Button
            android:id="@+id/music_button"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/menu_button"
            android:layout_alignStart="@+id/menu_button"
            android:layout_below="@+id/menu_button"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button"
            android:text="@string/music"
            android:textColor="@color/black"
            android:onClick="musicPage"/>

        <Button
            android:id="@+id/rewards_button"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:layout_alignRight="@+id/order_button"
            android:layout_alignEnd="@+id/order_button"
            android:layout_below="@+id/order_button"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button"
            android:text="@string/rewards"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/account_button"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/music_button"
            android:layout_alignStart="@+id/music_button"
            android:layout_below="@+id/music_button"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rounded_button"
            android:text="@string/account"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/contact_us_button"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:layout_alignRight="@+id/rewards_button"
            android:layout_alignEnd="@+id/rewards_button"
            android:layout_below="@+id/rewards_button"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rounded_button"
            android:text="@string/contactUs"
            android:textColor="@color/black"
            android:onClick="contactUsPage"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/howManyStarsEarned"
            android:layout_alignBottom="@+id/howManyStarsEarned"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/howManyStarsEarned"
            android:layout_toRightOf="@+id/howManyStarsEarned"
            android:text="\u2605"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textSize="30sp"
            tools:text="@string/star" />

    </android.widget.RelativeLayout>
</ScrollView>