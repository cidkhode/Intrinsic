<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intrinsic.cid.intrinsic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ForgotPassword"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ForgotPassword2"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".LandingPage"
            android:label="@string/title_activity_landing_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".OrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SpotifyActivity"
            android:label="@string/title_activity_spotify"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ContactActivity"
            android:label="@string/title_activity_contact"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MenuBubbleTeaActivity"
            android:label="@string/title_activity_bubble_tea"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MenuBrewedTeaActivity"
            android:label="@string/title_activity_brewed_tea"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MenuSmoothieActivity"
            android:label="@string/title_activity_smoothie"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MenuMilkshakeActivity"
            android:label="@string/title_activity_menu_milkshake"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MenuCoffeeActivity"
            android:label="@string/title_activity_menu_coffee"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>